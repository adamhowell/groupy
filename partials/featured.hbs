{{!--
Re-usable card for linking to posts
--}}

<article class="max-w-full mx-auto my-5 pb-5">
  <a href="{{url}}" class="flex flex-col-reverse md:flex-row">
    <div class="flex-grow my-5">
      <span class="text-gray-500 text-sm uppercase">
        <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
        <span class="bull">&bull;</span> {{reading_time}}
        {{#if @labs.members}}
            {{#has visibility="members"}}
                <span class="bull">&bull;</span> 
                Members only
            {{/has}}
            {{#has visibility="paid"}}
                <span class="bull">&bull;</span> 
                Members only
            {{/has}}
        {{/if}}
      </span>
      <h2 class="font-bold my-3 text-gray-800 text-4xl dark:text-gray-200">
        {{title}}
      </h2>
      <p class="leading-7 mb-3 mr-10 text-gray-700 text-lg dark:text-gray-300">
        {{excerpt}}
      </p>
    </div>
    {{#if feature_image}}
        <img class="block flex-none h-80 md:h-72 m-0 md:ml-5 object-cover rounded w-full md:w-1/2"
            srcset="{{img_url feature_image size="m"}} 600w"
            src="{{img_url feature_image size="m"}}"
            alt="{{title}}"
        />
    {{/if}}
  </a>
</article>
