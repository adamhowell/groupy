{{!< default}}

{{#post}}
<article class="border-b border-gray-200 dark:border-gray-700">
  <div class="border-b border-gray-200 dark:border-gray-700">
    <nav class="subtext-nav -mb-px flex space-x-8" aria-label="Tabs">
      <a href="/" class="border-transparent text-gray-400 text-sm hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium dark:hover:text-gray-200">
        Latest updates
      </a>

      {{#get "pages" filter="featured:true"}}
        {{#foreach pages}}
          <a href="{{url}}" class="border-b-2 border-transparent font-medium text-gray-400 text-sm hover:text-gray-700 hover:border-gray-300 py-4 px-1 whitespace-nowrap dark:hover:text-gray-200">
            {{title}}
          </a>
        {{/foreach}}
      {{/get}}
    </nav>
  </div>
  <header class="py-10">
    {{#if feature_image}}
      <img class="gh-feature-image" src="{{feature_image}}" alt="{{title}}" />
    {{/if}}
  </header>

  <div class="pb-10 mt-10 mx-auto prose prose-sm md:prose-md xl:prose-lg text-gray-700 dark:prose-dark dark:text-gray-200">
    {{content}}
  </div>

</article>
{{/post}}

<script>
  const list = document.querySelector('.subtext-nav')
  const listItems = list.children

  for (let page of listItems) {
    if(page.getAttribute("href") == window.location.pathname) {
     page.classList.add("current") 
    }
  }
</script>